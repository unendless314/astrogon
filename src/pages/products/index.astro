---
import CollectionLayout from "@components/products/CollectionLayout.astro";
import { getIndex, getEntries } from "@lib/contentParser";
import { sortByTitle } from "@lib/sortFunctions";
import type { ProductsEntry } from "@/types";

const entryIndex = (await getIndex("products")) as ProductsEntry;
const allEntries = (await getEntries("products", sortByTitle)) as ProductsEntry[];
const entries = allEntries.filter((e) => e.data.published !== false);

const { slug } = Astro.params;

const entriesPerPage = 6;
const currentPageIndex = slug && !isNaN(Number(slug)) ? Number(slug) : 1;
const pageCount = Math.ceil(entries.length / entriesPerPage);
const indexOfLastEntry = currentPageIndex * entriesPerPage;
const indexOfFirstEntry = indexOfLastEntry - entriesPerPage;
const currentEntries = entries.slice(indexOfFirstEntry, indexOfLastEntry);
---

<CollectionLayout
  entryIndex={entryIndex}
  entries={currentEntries}
  pageIndex={currentPageIndex}
  pageCount={pageCount}
/>
